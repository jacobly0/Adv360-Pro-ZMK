  macro {
    UNSHIFT(0, NUMBER_0);
    UNSHIFT(1, NUMBER_1);
    UNSHIFT(2, NUMBER_2);
    UNSHIFT(3, NUMBER_3);
    UNSHIFT(4, NUMBER_4);
    UNSHIFT(5, NUMBER_5);
    UNSHIFT(6, NUMBER_6);
    UNSHIFT(7, NUMBER_7);
    UNSHIFT(8, NUMBER_8);
    UNSHIFT(9, NUMBER_9);
    UNSHIFT(grave, GRAVE);
