#define DVP 0
#define QW  1
#define KP  2
#define FN  3
#define MOD 4

#define STRINGIFY(x) #x

#define UNSHIFT_1(name, shift, key) \
  name: macro_ ## name { \
    compatible = "zmk,behavior-macro"; \
    label = STRINGIFY(macro_ ## name); \
    #binding-cells = <0>; \
    wait-ms = <10>; \
    bindings = <&macro_release &kp shift ## _SHIFT>, \
               <&macro_press &kp key>, \
               <&macro_pause_for_release>, \
               <&macro_release &kp key>, \
               <&macro_press &kp shift ## _SHIFT>; \
  }

#define UNSHIFT(name, key) \
  UNSHIFT_1(lus_ ## name, LEFT, key); \
  UNSHIFT_1(rus_ ## name, RIGHT, key)

#define SHIFT_MORPH_UNSHIFT(name, key, morph) \
  name ## _inner: behavior_ ## name ## _inner { \
    compatible = "zmk,behavior-mod-morph"; \
    label = STRINGIFY(behavior_ ## name ## _inner); \
    #binding-cells = <0>; \
    bindings = <&kp key>, <&rus_ ## morph>; \
    mods = <(MOD_RSFT)>; \
  }; \
  name: behavior_ ## name { \
    compatible = "zmk,behavior-mod-morph"; \
    label = STRINGIFY(behavior_ ## name); \
    #binding-cells = <0>; \
    bindings = <&name ## _inner>, <&lus_ ## morph>; \
    mods = <(MOD_LSFT)>; \
  }

#define SHIFT_MORPH(name, key, morph) \
  name: behavior_ ## name { \
    compatible = "zmk,behavior-mod-morph"; \
    label = STRINGIFY(behavior_ ## name); \
    #binding-cells = <0>; \
    bindings = <&kp key>, <&kp morph>; \
    mods = <(MOD_LSFT|MOD_RSFT)>; \
  }

